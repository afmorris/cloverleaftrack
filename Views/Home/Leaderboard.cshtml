@model LeaderboardViewModel

@{
    ViewData["Title"] = "Leaderboard";
}

<div class="border-bottom pt-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item active">
                Leaderboard
            </li>
        </ol>
    </nav>
</div>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="display-1">
        Leaderboard
    </h1>
</div>

<div class="container-fluid p-0">
    <div class="row">
        <div class="col-sm-6 ml-1 mr-1">
            <div class="row">
                <div class="container-fluid">
                    <div class="row">
                        <h3 class="border-bottom pb-1 text-center">
                            Boys
                        </h3>
                    </div>
                    <div class="row">
                        @foreach (var ev in Model.BoysEvents)
                        {
                            <div class="col-sm-2 m-1 border shadow rounded bg-light p-3">
                                @ev.Key.Name
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 ml-1 mr-1">
            <div class="row">
                <div class="container-fluid">
                    <div class="row">
                        <h3 class="border-bottom pb-1 text-center">
                            Girls
                        </h3>
                    </div>
                    <div class="row">
                        @foreach (var ev in Model.GirlsEvents)
                        {
                            <div class="col-sm-2 m-1 border shadow rounded bg-light p-3">
                                @ev.Key.Name
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>